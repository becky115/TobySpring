<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
		<property name="driverClass" value="com.mysql.jdbc.Driver"/>
		<property name="url" value="jdbc:mysql://localhost/test?characterEncoding=utf8"/>
		<property name="username" value="root"/>
		<property name="password" value="qwer1234"/>
	
	</bean>
	
	<bean id="mailSender" class="ex5._55.DummyMailSender"/>
	
	
	<bean id="userService" class="ex5._53.UserService">
		<property name="userDao" ref="userDao"/>
		<property name="transactionManager" ref="transactionManager"/>
		<property name="mailSender" ref="mailSender"/>
	</bean>
	
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource"  ref="dataSource"/>
	</bean>

	<bean id="userDao" class="ex5._55.UserDaoJdbc">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	
	

	
</beans>
